<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.changes[:shipping] do %>
    <div class="info alert"><%= @changeset.changes.shipping.errors[:shipping_method_id] %></div>
  <% end %>
  <%= inputs_for f, :shipment_units, fn fship -> %>
    <h4>Select your shipping method for <%=  shipment_details(fship.source.model) %></h4>
    <div class="form-group">
      <%= label fship, :shipping_method_id, "Shipping Method", class: "control-label" %>
      <%= select fship, :shipping_method_id, shipping_method_selection(fship.source) %>
    </div>
    <hr>
  <% end %>

  <%= submit "Next", class: "btn btn-primary" %>
<% end %>
